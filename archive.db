        tmp-face: make face m []
        tmp-face/text: copy/part tmp-face/text 1
        h: second size-text tmp-face

        t: copy f/text
        repeat i length? f/line-list [
            p: index? offset-to-caret f as-pair 0 i + 1 * h
            insert at t p + i - 1 newline
        ]
        t
    ]

    print wrap-text m
    view gui
